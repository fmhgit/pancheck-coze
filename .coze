[project]
entrypoint = "./main"

[dev]
build = ["bash", "-c", "cd pancheck && GOPROXY=https://goproxy.cn,direct go build -o bin/main ./cmd/api && cp pancheck/bin/main . && chmod +x main"]
run = ["bash", "-c", "./main"]

[deploy]
build = ["bash", "-c", "ls -la main && chmod +x main && echo 'Binary ready'"]
run = ["bash", "-c", "./main"]
