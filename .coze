[project]
entrypoint = "pancheck/bin/main"

[dev]
build = ["bash", "-c", "cd pancheck && GOPROXY=https://goproxy.cn,direct go build -o bin/main ./cmd/api"]
run = ["bash", "-c", "cd pancheck && ./bin/main"]

[deploy]
build = ["bash", "-c", "cd pancheck && ls -la bin/main && chmod +x bin/main && echo 'Binary ready'"]
run = ["bash", "-c", "cd pancheck && ls -la bin/main && chmod +x bin/main && ./bin/main"]
